{
  "extends": ["@tsconfig/strictest", "@tsconfig/node18"],
  "include": ["src/**/*.ts", "src/**/*.cts", "src/**/*.mts", "prettier.config.d.cts"],
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "isolatedModules": true
  }
}
